<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_bottleBarCd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="DHCO200273"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="@dimen/item_text_size" />
        <TextView
            android:id="@+id/tv_bottleId"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="1"/>

        <TextView
            android:id="@+id/tv_productNm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/item_text_sizeB"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="고순도믹스가스" />

        <TextView
            android:id="@+id/tv_chargedt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/item_text_sizeB"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="1000일" />

        <Button
            android:id="@+id/btn_buyback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="정보"
            android:textColor="#000000"
            android:textSize="@dimen/item_text_sizeB" />

    </LinearLayout>
    <View style="@style/Divider"/>

</LinearLayout>