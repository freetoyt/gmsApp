<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_orderCustomerNm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="DHCO200273"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="@dimen/button_long_size" />
        <TextView
            android:id="@+id/tv_orderProductNm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="DHCO200273"
            android:paddingLeft="5dp"
            android:textColor="#FB025D"
            android:gravity="center_vertical"
            android:textSize="@dimen/button_long_size" />
        <TextView
            android:id="@+id/tv_orderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="1"/>
        <TextView
            android:id="@+id/tv_orderProductCapa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/button_long_size"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="CO2(의료용)" />
        <TextView
            android:id="@+id/tv_customerCity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="주문접수"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="@dimen/button_long_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_orderTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="1000:"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="@dimen/button_long_size" />
        <TextView
            android:id="@+id/tv_createId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="1"/>
        <TextView
            android:id="@+id/tv_createNm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="김서윤"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="@dimen/button_long_size" />
        <TextView
            android:id="@+id/tv_orderProcessCd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="주문접수"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="@dimen/button_long_size" />
        <TextView
            android:id="@+id/tv_orderEtc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="주문접수"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="@dimen/button_long_size" />

        <TextView
            android:id="@+id/tv_orderDeliveryDt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/button_long_size"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="2022-02-25" />


        <Button
            android:id="@+id/btn_delOrder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/baseline_delete_forever_black_20" />
    </LinearLayout>
    <View style="@style/Divider" />
</LinearLayout>