<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_mProductNm"
            android:layout_width="@dimen/item_width5"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:textSize="@dimen/item_text_sizeB"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="고순도믹스가스" />
        <TextView
            android:id="@+id/tv_mBottleId"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="1"/>

        <TextView
            android:id="@+id/tv_mProductCapa"
            android:layout_width="@dimen/item_width4"
            android:layout_height="match_parent"
            android:text="DHCO200273"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="@dimen/item_text_sizeB" />

        <TextView
            android:id="@+id/tv_mProductCnt"
            android:layout_width="@dimen/item_width4"
            android:layout_height="match_parent"
            android:textSize="@dimen/item_text_sizeB"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="1000일" />

    </LinearLayout>
    <View style="@style/Divider"/>

</LinearLayout>